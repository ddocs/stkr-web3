{
  "name": "@ankr.com/stkr-jssdk",
  "version": "1.1.0-2",
  "description": "stkr js sdk to interact with stkr.io directly",
  "keywords": [
    "ankr",
    "ankr.com",
    "stkr",
    "stkr.io",
    "eth 2.0",
    "staking"
  ],
  "main": "dist/index.js",
  "module": "dist",
  "typings": "dist/types",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json",
    "prebuild": "node_modules/.bin/rimraf dist",
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "precommit": "lint-staged; npm run test",
    "preversion": "npm run lint",
    "prepublish": "tsc"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "json",
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/src/events.ts"
    ],
    "coverageThreshold": {
      "global": {
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/jest": "24.0.0",
    "jest": "24.0.0",
    "jest-config": "^23.6.0",
    "ts-jest": "^23.10.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.0.3",
    "husky": "^4.3.6"
  },
  "dependencies": {
    "bn.js": "^5.1.3",
    "ethereumjs-wallet": "^1.0.1",
    "node-fetch": "^2.6.1",
    "rimraf": "^3.0.2",
    "web-utils": "^1.0.0",
    "web3": "1.2.11",
    "web3-core": "1.2.11",
    "web3-eth-contract": "1.2.11",
    "web3-typescript-typings": "^0.10.2"
  }
}
